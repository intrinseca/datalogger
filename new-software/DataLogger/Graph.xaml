<UserControl x:Class="DataLogger.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dl="clr-namespace:DataLogger"
             Name="graph"
             mc:Ignorable="d" 
             d:DesignHeight="201" d:DesignWidth="438">

    <ScrollViewer Name="scrGraph"  CanContentScroll="True" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible" HorizontalContentAlignment="Right">
        <Grid Name="grdPoints">
            <Polyline Stroke="Black" Name="plGraph" />
        </Grid>
    </ScrollViewer>

</UserControl>
